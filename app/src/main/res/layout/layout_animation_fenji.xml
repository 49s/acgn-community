<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/animation_image_fenji"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_animation_fenji"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="10月新番"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_toRightOf="@id/animation_image_fenji"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分季列表 >"
            android:textSize="11sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/newsSummaryText"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fenji1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <android.support.v7.widget.CardView
                android:id="@+id/fenji1_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/fenji1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pic10"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/fenji1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="小林家的龙女仆"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/fenji1_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="更新至第七话"
                android:textColor="@color/newsSummaryText"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fenji2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <android.support.v7.widget.CardView
                android:id="@+id/fenji2_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/fenji2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pic10"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/fenji2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="风夏"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/fenji2_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="更新至第九话"
                android:textColor="@color/newsSummaryText"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fenji3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <android.support.v7.widget.CardView
                android:id="@+id/fenji3_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/fenji3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pic10"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/fenji3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="锁链战机 赫克瑟塔斯之光"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/fenji3_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="更新至第三话"
                android:textColor="@color/newsSummaryText"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>