<?xml version="1.0" encoding="utf-8"?>
<!--新闻时间,浏览数,评论数模块-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_time_browse_praise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <!--新闻时间-->
    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33分钟前"
        android:textColor="@color/newsTimeText"
        android:textSize="@dimen/news_time_text_size"
        android:typeface="monospace"/>

    <!--评论总数模块-->
    <LinearLayout
        android:id="@+id/button_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@mipmap/icon_news_comment"/>

        <TextView
            android:id="@+id/news_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="4396"
            android:textColor="@color/newsCommentText"
            android:textSize="@dimen/news_comment_text_size"
            android:typeface="monospace"/>
    </LinearLayout>
    <!--浏览总数模块-->
    <LinearLayout
        android:id="@+id/button_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/button_praise"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/icon_news_browse"/>

        <TextView
            android:id="@+id/news_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="4396"
            android:textColor="@color/newsBrowseText"
            android:textSize="@dimen/news_browse_text_size"
            android:typeface="monospace"/>
    </LinearLayout>

</RelativeLayout>