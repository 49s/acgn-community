<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/novel_image_newbook"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_novel_xinshu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/novel_image_newbook"
            android:text="新书上架"
            android:textColor="#000"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="更多 >"
            android:textColor="@color/newsSummaryText"
            android:textSize="11sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/newbook1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/newbook1_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/newbook1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pic10"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/newbook1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="小林家的龙女仆"
                android:textColor="#727171"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newbook2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/newbook2_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/newbook2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pic10"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/newbook2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="风夏"
                android:textColor="#727171"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/newbook3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/newbook3_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <ImageView
                    android:id="@+id/newbook3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pic10"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/newbook3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="锁链战机 赫克瑟塔斯之光"
                android:textColor="#727171"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>